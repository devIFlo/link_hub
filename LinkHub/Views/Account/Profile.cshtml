@model ApplicationUser

@{
    ViewData["Title"] = "Perfil do Usuário";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title">@ViewData["Title"]</h5>
               
                @if (Model.UserType == "LOCAL")
                {
                    <a href="javascript:" user-id="@Model.Id" class="btn btn-warning btn-user-password">
                        <i class="fa-solid fa-user-lock"></i>
                        <span class="d-none d-sm-inline">Alterar Senha</span>
                    </a>
                }
            </div>

            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <strong>@Html.DisplayNameFor(model => model.UserName):</strong> @Model.UserName
                </li>
                <li class="list-group-item">
                    <strong>@Html.DisplayNameFor(model => model.FullName):</strong> @Model.FullName
                </li>
                <li class="list-group-item">
                    <strong>@Html.DisplayNameFor(model => model.Email):</strong> @Model.Email
                </li>
                <li class="list-group-item">
                    <strong>@Html.DisplayNameFor(model => model.UserType):</strong> @Model.UserType
                </li>
            </ul>
        </div>
    </div>
</div>

@* Modal User Password *@
<div class="modal fade" id="modalUserPassword" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div id="userPassword"></div>
        </div>
    </div>
</div>