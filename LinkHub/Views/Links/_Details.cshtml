@model Link

<div class="modal-header">
    <h5 class="modal-title">Detalhes do Link</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <div class="row">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <img id="imagePreview" src="/images/@Html.DisplayFor(model => model.FileName)" class="card-img-top" alt="...">
            </li>
            <li class="list-group-item">
                <strong>@Html.DisplayNameFor(model => model.Name):</strong> @Model.Name
            </li>
            <li class="list-group-item">
                <strong>@Html.DisplayNameFor(model => model.Description):</strong> @Model.Description
            </li>
            <li class="list-group-item">
                <strong>@Html.DisplayNameFor(model => model.Category!.Page):</strong> @Model.Category!.Page!.Name
            </li>
            <li class="list-group-item">
                <strong>@Html.DisplayNameFor(model => model.Category):</strong> @Model.Category.Name
            </li>
            <li class="list-group-item">
                <strong>@Html.DisplayNameFor(model => model.Url):</strong> <a href="@Model.Url" target="_blank">@Model.Url</a>
            </li>
            
        </ul>
    </div>
</div>
<div class="form-group modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>