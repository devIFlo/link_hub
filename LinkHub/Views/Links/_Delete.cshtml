@model LinkHub.Models.Link

<div class="modal-header">
    <h5 class="modal-title">Confirma a remoção do link abaixo?</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <div class="container">
        <div class="row">
            <div class="col-sm">
                <strong>@Html.DisplayNameFor(model => model.Name)</strong>: @Html.DisplayFor(model => model.Name)
            </div>
        </div>
        <div class="row">
            <div class="col-sm">
                <strong>@Html.DisplayNameFor(model => model.Url)</strong>: @Html.DisplayFor(model => model.Url)
            </div>
        </div>
        <div class="row">
            <div class="col-sm">
                <img src="/images/@Html.DisplayFor(model => model.FileName)" class="card-img-top" alt="...">
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
    <form asp-action="Delete">
        <input type="submit" value="Remover" class="btn btn-danger" />
    </form>
</div>