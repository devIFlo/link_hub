@model LinkHomeViewModel

<div class="modal-header">
    <h5 class="modal-title">Home Page</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <div class="row">
        <form id="formLinkHome" enctype="multipart/form-data" asp-action="Home">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LinkId" />
            <div class="form-group">
                <label asp-for="SelectedPageIds" class="control-label">Páginas que exibem o link <strong>@Model.LinkName</strong> na sua Home:</label>
                <select asp-for="SelectedPageIds" asp-items="@(new SelectList(Model.Pages, "Id", "Name"))" class="form-select" id="multiple-select-field" multiple></select>
            </div>
        </form>
    </div>
</div>
<div class="form-group modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
    <input type="submit" form="formLinkHome" value="Salvar" class="btn btn-success" />
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>