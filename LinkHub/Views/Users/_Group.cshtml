@model RoleViewModel

<div class="modal-header">
    <h5 class="modal-title">Grupo de Acesso</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <div class="row">
        <form id="formGroup" enctype="multipart/form-data" asp-action="Group">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" />
            <div>
                <p>Usuário: @Model.UserName</p>
            </div>
            <div class="form-group">
                <label asp-for="SelectedRole" class="control-label"></label>
                <select asp-for="SelectedRole" class="form-control" asp-items="@(new SelectList(Model.Roles, "Name", "Name"))"></select>
            </div>
        </form>
    </div>
</div>
<div class="form-group modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
    <input type="submit" form="formGroup" value="Salvar" class="btn btn-success" />
</div>