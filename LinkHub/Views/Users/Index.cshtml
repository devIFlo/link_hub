@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Usuários";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<form asp-action="SyncLdapUsers" method="post" class="text-end">
    <button type="submit" class="btn btn-success">Sincronizar Usuários</button>
    <a href="javascript:" class="btn-user-settings">
        <i class="fa-solid fa-gear fa-xl"></i>
    </a>
</form>

<br />

<div class="table-responsive">
    <table id="data-table" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.UserName)</th>
                <th>@Html.DisplayNameFor(model => model.FirstName)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>#</th>
                <th>#</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.FirstName @user.LastName</td>
                    <td>@user.Email</td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a href="javascript:" page-id="@user.Id" class="btn btn-success btn-group-permission">Grupo</a>
                        </div>
                    </td>
                    <td>
                        <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Deletar
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@* Modal User Settings *@
<div class="modal fade" id="modalUserSettings" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div id="userSettings"></div>
        </div>
    </div>
</div>

@* Modal Group Permission *@
<div class="modal fade" id="modalGroupPermission" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div id="groupPermission"></div>
        </div>
    </div>
</div>